<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="sources-subform">

		<field
			name="source_url"
			type="url"
			label="COM_BLOG_SUBFORM_FIELD_SOURCE_URL_LABEL"
			description="COM_BLOG_SUBFORM_FIELD_SOURCE_URL_DESC"
			filter="url"
		/>

		<field
			name="source_title"
			type="textarea"
			label="COM_BLOG_SUBFORM_FIELD_SOURCE_TITLE_LABEL"
			description="COM_BLOG_SUBFORM_FIELD_SOURCE_TITLE_DESC"
			rows="5"
			filter="string"
		/>

		<field
			name="source_publish_date"
			type="calendar"
			label="COM_BLOG_SUBFORM_FIELD_SOURCE_PUBLISH_DATE_LABEL"
			description="COM_BLOG_SUBFORM_FIELD_SOURCE_PUBLISH_DATE_DESC"
			filter="user_utc"
			format="%Y-%m-%d"
			showtime="false"
			singleheader="false"
			todaybutton="true"
		/>
	</fieldset>
</form>
