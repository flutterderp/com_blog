<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade">
	<name>com_blog</name>
	<author>Joomla! Project</author>
	<creationDate>2025-10</creationDate>
	<copyright>(C) 2006 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>5.0.0</version>
	<description>COM_BLOG_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Component\Blog</namespace>
	<scriptfile>installscript.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/install.mysql.sql</file>
		</sql>
	</install>
	<update>
		<schemas>
			<schemapath type="mysql">sql/mysql/updates</schemapath>
		</schemas>
	</update>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>forms</folder>
		<folder>helpers</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/com_blog.ini</language>
	</languages>
	<media destination="com_blog" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<file>joomla.asset.json</file>
	</media>
	<administration>
		<menu img="class:content">COM_BLOG</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_blog&amp;task=article.add" img="class:content"
				view="article" alt="Blog/Article">COM_BLOG_MENUS_NEW_ARTICLE</menu>
			<menu link="option=com_blog" img="class:content"
				view="articles" alt="Blog/Articles">COM_BLOG_MENUS_ARTICLE_MANAGER</menu>
			<menu link="option=com_categories&amp;extension=com_blog"
				view="categories" img="class:content-cat" alt="Blog/Categories">COM_BLOG_MENUS_CATEGORY_MANAGER</menu>
		</submenu>

		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>blog.xml</filename>
			<folder>forms</folder>
			<folder>helpers</folder>
			<folder>layouts</folder>
			<folder>services</folder>
			<folder>src</folder>
			<folder>sql</folder>
			<folder>tmpl</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/com_blog.ini</language>
			<language tag="en-GB">language/en-GB/com_blog.sys.ini</language>
		</languages>
	</administration>
	<dashboards>
		<dashboard title="COM_BLOG_DASHBOARD_TITLE" icon="icon-file-alt">blog</dashboard>
	</dashboards>
</extension>
